<h2 class="text-center">Create Book</h2><hr/>
	<%= form_for(@book, remote: true) do |f|%>
	<% if @book.errors.any? %>
		<h3 class="errors"><%= pluralize(@book.errors.count, "error") %> prohibited this company from being saved:</h3>
		<ul class="errors">
			<% @book.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<div class="col-md-9 col-md-offset-1">
		<div class="form-group">
			<p><b>Title:</b></p>
			<%= f.text_field :title, class: "form-control" %>
		</div>
		<div class="form-group">
			<p><b>Description:</b></p>
			<%= f.text_area :description, class: "form-control" %>
		</div>	
		<div class="form-group">
			<p><b>Category</b></p>
			<%= f.select(:category_id, options_for_select(@categories_array), {}, { class: "form-control" }) %>	
			<%# options_from_collection_for_select(Category.all, :id, :name) %>
		</div>
		<div class="form-group">
				<%= f.submit :class => "btn btn-success" %>
		</div>	
	</div>
<% end %>