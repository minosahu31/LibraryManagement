<!DOCTYPE html>
<html>
<head>
  <title>LibraryManagement</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">	
	<div class="container">
		<div class="navbar-header">
			<%= link_to "Book categories", categories_path, class: "navbar-brand" %>
		</div>
		<ul class="nav navbar-nav pull-right">
			<% if !user_signed_in? %>
				<li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %></li>
			<% end %>
			<% if user_signed_in? %>
				<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn-default" %></li>
			<% else %>
				<li><%= link_to "Sign In", new_user_session_path, class: "btn btn-default" %></li>	
			<% end %>	
		</ul>
	</div>	
</nav>	
<div class="container">	
	<% if user_signed_in? %>
		<b class="current-user pull-right">User:<u><%= current_user.email %></u></b>
	<% end %>
	<p class="notice  text-center"><%= notice %></p>
	<p class="alert  text-center"><%= alert %></p>
</div>
<%= yield %>

</body>
</html>
